{
  "name": "subpilot",
  "version": "1.0.0",
  "description": "Application de gestion d'abonnements simple et élégante",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "test": "node test-api.js"
  },
  "keywords": [
    "abonnements",
    "subscriptions",
    "gestion",
    "management",
    "electron"
  ],
  "author": "anastas-hub",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.anastas.subpilot",
    "productName": "SubPilot",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
