{
  "name": "subpilot",
  "version": "1.0.2",
  "description": "Application de gestion d'abonnements simple et élégante",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "prettier --write .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "anastas-hub",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.anastas.subpilot",
    "productName": "SubPilot",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SubPilot",
      "menuCategory": "AnastasHUB",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "license": "LICENSE",
      "runAfterFinish": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "artifactName": "SubPilot-Setup-${version}.${ext}"
    },
    "msi": {
      "shortcutName": "SubPilot",
      "menuCategory": "AnastasHUB",
      "perMachine": false,
      "upgradeCode": "{A1B2C3D4-E5F6-7890-1234-56789ABCDEF0}",
      "artifactName": "SubPilot-Installer-${version}.${ext}"
    }
  }
}
