{
  "name": "subpilot",
  "version": "1.0.1",
  "description": "Application de gestion d'abonnements simple et élégante",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "anastas-hub",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "express": "^4.18.2",
    "smart-buffer": "^4.2.0"
  },
  "build": {
    "appId": "com.anastas.subpilot",
    "productName": "SubPilot",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
